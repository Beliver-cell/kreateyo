# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/nexuscreate
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/nexuscreate

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRE=30d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Email Service (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@kreateyo.com

# Cloudinary (File Uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Zoom Integration
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_ACCOUNT_ID=your-zoom-account-id
ZOOM_REDIRECT_URI=http://localhost:5000/api/zoom/callback

# Domain & Subdomain System
MAIN_DOMAIN=kreateyo.com
SERVER_IP=0.0.0.0

# Yopay Payment System (Flutterwave)
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-public-key-here
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-secret-key-here
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST-your-encryption-key-here
FLUTTERWAVE_WEBHOOK_SECRET=your-webhook-secret-hash-here

# Customer Authentication
JWT_CUSTOMER_SECRET=your-customer-jwt-secret-change-this
CUSTOMER_TOKEN_EXPIRES=30d

# Social Media APIs (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-token

# Ad Networks (for Blogging)
GOOGLE_ADSENSE_CLIENT_ID=your-adsense-client-id
MEDIAVINE_API_KEY=your-mediavine-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
